{% extends "base.html.twig" %}

{% block body %}
    <div class="container">

        <h1 class="mt-4">Modification d'une disponibilit√©</h1>

        {{ form_start(form) }}

    <div class="form-group">
      {{ form_label(form.start_date) }}
      {{ form_widget(form.start_date) }}
      <div class="form-error">
        {{ form_errors(form.start_date) }}
      </div>
    </div>

    <div class="form-group">
      {{ form_label(form.end_date) }}
      {{ form_widget(form.end_date) }}
      <div class="form-error">
        {{ form_errors(form.end_date) }}
      </div>

    <div class="form-group">
      {{ form_label(form.price) }}
      {{ form_widget(form.price) }}
      <div class="form-error">
        {{ form_errors(form.price) }}
      </div>
    </div>
 
    <div class="form-group">
      {{ form_widget(form.status) }}
      <div class="form-error">
        {{ form_errors(form.status) }}
      </div>
    </div>

    <div class="form-group">
      {{ form_label(form.vehicle) }}
      {{ form_widget(form.vehicle) }}
      <div class="form-error">
        {{ form_errors(form.vehicle) }}
      </div>

    </div>   
    <div class="form-group">
        {{ form_row(form.submit) }}
    </div>
    
        {{ form_end(form) }}
    </div>
{% endblock %}